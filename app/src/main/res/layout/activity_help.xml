<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Справка" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/contact_the_developer"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_email_black_24dp"
                        app:liv_title="Email"
                        app:liv_displayMode="icon"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_telegram_black_24dp"
                        app:liv_title="Telegram"
                        app:liv_displayMode="icon"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/faq"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_document_black_24dp"
                        app:liv_title="Я не могу разобраться, как пользоваться читалкой?"
                        app:liv_displayMode="icon"
                        app:liv_multiline="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="72dp"
                        android:background="?colorLine"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_document_black_24dp"
                        app:liv_title="Скажите, а я могу скачать мангу в читалке?"
                        app:liv_displayMode="icon"
                        app:liv_multiline="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="72dp"
                        android:background="?colorLine"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_document_black_24dp"
                        app:liv_title="Что это за статусы манги: Онгоинг, Завершено?"
                        app:liv_displayMode="icon"
                        app:liv_multiline="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="72dp"
                        android:background="?colorLine"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        app:liv_icon="@drawable/ic_document_black_24dp"
                        app:liv_title="Я читал мангу, а сейчас не могу её найти, в чем проблема?"
                        app:liv_displayMode="icon"
                        app:liv_multiline="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginStart="72dp"
                        android:background="?colorLine"/>

                    <com.lucasurbas.listitemview.ListItemView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginBottom="4dp"
                        app:liv_icon="@drawable/ic_document_black_24dp"
                        app:liv_title="Я нашел ошибку в приложении"
                        app:liv_displayMode="icon"
                        app:liv_multiline="true"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>